{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Bot",
            "runtimeArgs": ["-r", "ts-node/register"],
            "program": "${workspaceFolder}/src/bot.ts",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development"
            },
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
